<h1>Articles</h1>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
<% @articles.each do |article| %>
  <tr>
     <td><%= article.title %></td>
     <td><%= article.text %></td>
     <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary' %></td>
     <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %></td>
     <td><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>
